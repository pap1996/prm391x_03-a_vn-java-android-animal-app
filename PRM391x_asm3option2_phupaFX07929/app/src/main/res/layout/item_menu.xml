<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_title_animal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/iv_sea"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bg_sea"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Seas"
            android:textColor="@color/purple_700"
            android:textSize="20sp"/>
    </TableRow>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/iv_mammal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bg_mammal"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Mammals"
            android:textColor="@color/purple_700"
            android:textSize="20sp"/>
    </TableRow>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/purple_700"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/iv_bird"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bg_bird"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Birds"
            android:textColor="@color/purple_700"
            android:textSize="20sp"/>
    </TableRow>
</LinearLayout>